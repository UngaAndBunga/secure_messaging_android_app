<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_secure_password"
        android:autofillHints="Enter Password"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textAppearance="@style/TextPrimary"
        android:textColor="@color/accent" />

    <Button
        android:id="@+id/setPasswordButton"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="8dp"
        android:text="Set Password" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setPasswordButton"
        android:layout_marginTop="16dp"
        android:hint="Enter your message"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textAppearance="@style/TextPrimary"
        android:textColor="@color/accent" />

    <Button
        android:id="@+id/sendMessageButton"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageEditText"
        android:layout_marginTop="8dp"
        android:text="Send Message" />

    <Button
        android:id="@+id/receiveMessagesButton"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendMessageButton"
        android:layout_marginTop="8dp"
        android:text="Receive Messages" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/receiveMessagesButton"
        android:layout_above="@id/bottomMarginView"
        android:layout_marginTop="16dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/receivedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_background"
            android:padding="12dp"
            android:textAppearance="@style/TextSecondary"
            android:scrollbars="vertical" />
    </ScrollView>

    <!-- A dummy view to serve as the bottom margin for ScrollView -->
    <View
        android:id="@+id/bottomMarginView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
